# 应用配置
APP_NAME=Temu-Omni
APP_VERSION=1.0.0
DEBUG=True
SECRET_KEY=your-secret-key-here-change-in-production

# 数据库配置
DATABASE_URL=postgresql://postgres:password@localhost:5432/temu_omni

# Temu API配置（标准端点）
TEMU_APP_KEY=your_app_key
TEMU_APP_SECRET=your_app_secret
TEMU_API_BASE_URL=https://agentpartner.temu.com/api

# Temu CN API配置（CN端点）
TEMU_CN_APP_KEY=your_cn_app_key
TEMU_CN_APP_SECRET=your_cn_app_secret

# Temu API 代理配置（必须配置，订单API必须通过代理服务器）
# 代理服务器地址，例如：http://172.236.231.45:8001 或 http://localhost:8001
TEMU_API_PROXY_URL=http://172.236.231.45:8001

# Redis配置
REDIS_URL=redis://localhost:6379/0

# CORS配置
CORS_ORIGINS=["http://localhost:5173"]

# 数据同步配置
AUTO_SYNC_ENABLED=True
SYNC_INTERVAL_MINUTES=30

# 时区配置
TIMEZONE=Asia/Shanghai

# 回款配置
SETTLEMENT_DAYS_AFTER_DELIVERY=7  # 签收后N天回款

# AI服务配置（已移除，请通过前端页面配置）

# OpenRouter API配置（FrogGPT AI模块）
# 获取API密钥：https://openrouter.ai/keys
OPENROUTER_API_KEY=your_openrouter_api_key_here
# 默认使用的AI模型（可选，默认：openai/gpt-4o-mini）
OPENROUTER_MODEL=openai/gpt-4o-mini
# API请求超时时间（秒，默认：60）
OPENROUTER_TIMEOUT=60.0
# HTTP Referer（用于免费使用，可选）
OPENROUTER_HTTP_REFERER=http://localhost:5173
# X-Title头（可选，默认：Temu Omni）
OPENROUTER_X_TITLE=Temu Omni

